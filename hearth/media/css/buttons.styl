@import 'lib';

.button,
.button:visited {
    // Bluish.
    background: $breezy-blue;
    border: 0;
    border-radius: 5px;
    color: $white;
    display: inline-block;
    font: 400 15px/48px $open-stack;
    height: 48px;
    min-width: 100px;
    white-space: nowrap;
    padding: 3px 20px;
    text-align: center;
    text-decoration: none;

    &:hover,
    &:focus {
        background: darken($breezy-blue, 10%);
        text-decoration: none;
    }
}

.button {
    ellipsis();

    // Grayish.
    &.disabled,
    &[disabled] {
        background: $seavan-salt-white;
        box-shadow: none;
        color: $earl-gray;
        pointer-events: none;
    }
    // Redish.
    &.manage {
        background: #DA5132;
        box-shadow: none;

        &:hover,
        &:focus {
            background: darken(#DA5132, 10%);
        }
    }
    &.gray {
        border: 1px solid $cement-gray;
        background-color: $seavan-salt-white;
        color: $medium-gray;
    }
    // Waiting/Loading spinner.
    &.loading-submit {
        position: relative;

        &:after {
            content: "";
            display: block;
            spinner('absolute alt');
            top: 8px;
        }
    }
    &.product {
        fatten();
    }
    &[disabled], &.disabled,
    &.purchasing, &.purchased,
    &.installing, &.installed {
        pointer-events: none;
    }
    &.installed, &.purchased, &.incompatible {
        pointer-events: auto;
    }

    .spin {
        display: inline-block;
        spinner('install');
    }
}

@media $retina {
    .button {
        &.loading-submit:after {
            spinner-alt-image('retina');
        }
        .spin {
            spinner-install-image('retina');
        }
    }
}

@media (max-width: 600px) {
    .button {
        padding: 3px 15px;

        &.fat {
            display: block;
            width: 100%;
        }
    }
}


.mkt-tile .button {
    border: 0;
    bottom: 0;
    font-size: 12px;
    height: 25px;
    line-height: 25px;
    min-width: 65px;
    padding: 0;
    position: absolute;
    right: 0;

    &[disabled] {
        background: $seavan-salt-white;
        box-shadow: none;
    }
}

.loadmore {
    list-style: none;
    margin: 0 auto;
    padding: 18px 10px;
    position: relative;
    width: 100%;

    button {
        background: $earl-gray;
        border: 0;
        box-shadow: none;
        color: $white;
        display: block;
        margin: auto;
        padding: 0;
        width: 100%;

        &:hover {
            background: $earl-gray;
            color: $white;
        }
        &.hide,
        &:not(.hide) + .spinner {
            display: none;
        }
    }
    &.loading {
        button {
            visibility: hidden;
        }
        .throbber {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            width: 32px;
            height: 32px;
            border-radius: 20px;
            border: 4px solid #666;
            border-color: #666 transparent;
            animation(unquote('spin 1s linear infinite'));
        }
    }
    span,
    .throbber {
        display: none;
    }
}

.listing .loadmore,
.reviews-listing .loadmore {
    height: auto;
    min-height: 78px;
}
