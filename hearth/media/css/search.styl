@import 'lib';

.no-results {
    font-size: 24px;
    font-weight: bold;
    line-height: 1.3;
    opacity: .5;
    padding: 20px;
    text-align: center;
}

b[data-href] {
    color: $link-dark;
    cursor: pointer;
    font-weight: 600;

    &:hover {
        text-decoration: underline;
    }
}

@media $at-least-desktop {
    #search-results .listing > li {
        .shots .next, .shots .prev {
            opacity: 0;
        }
        &:hover {
            .shots .next, .shots .prev {
                opacity: 1;
            }
        }
    }
}

@media $narrower-than-desktop {
    #search-results {
        margin-top: -6px;
    }
}
